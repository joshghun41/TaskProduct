<Window x:Class="ProductTask.Domain.Views.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductTask.Domain.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ClientWindow" Height="450" Width="800">
    <Grid Background="Chocolate">

        <StackPanel Orientation="Vertical">


            <Button Width="250"
                    Height="40"
                    Content="Show All Products"
                    FontSize="25"
                    Command="{Binding ShowAllProductsCommand}"
                    FontWeight="Medium"
                    Foreground="White"
                    Background="Black"
                    Margin="150">

            </Button>
            <Button Width="250"
                    Height="40"
                    Content="Buy Product"
                    FontSize="25"
                    Command="{Binding BuyProductCommand}"
                    FontWeight="Medium"
                    Foreground="White"
                    Background="Black"
                    Margin="0,-200,0,0"
                    />


        </StackPanel>

    </Grid>
</Window>
