<Window x:Class="ProductTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductTask"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Product" Height="450" Width="800">
    
    
    <Grid Background="Chocolate">



        <StackPanel Orientation="Vertical">


            <Button Width="200"
                    Height="40"
                    Content="ADMIN"
                    Command="{Binding AdminCommand}"
                    FontSize="25"
                    FontWeight="Medium"
                    Foreground="White"
                    Background="Black"
                    Margin="150">
                
            </Button>
            <Button Width="200"
                    Height="40"
                    Content="CLIENT"
                    FontSize="25"
                    Command="{Binding ClientCommand}"
                    FontWeight="Medium"
                    Foreground="White"
                    Background="Black"
                    Margin="0,-200,0,0"
                    />


        </StackPanel>
        
        
        
    </Grid>
    
    
    
</Window>
